<div class="panel panel-black">
    <div class="panel-body">
        <a class="add_link" href="/brands/form"><i class="fa fa-4x fa-plus-circle"></i></a>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody id="modal-row-container">
                {{#list}}
                <tr id="{{_id}}" data-logo="{{logo}}">
                    <td id="name">{{name}}&nbsp;
                        {{#if website}}
                            <a href="{{website}}"><i class="fa fa-external-link"></i></a>
                        {{/if}}
                    </td>
                    <td id= "description">{{description}}</td>
                    <td id="actions"><a id="del-link" data-id="{{_id}}" href=""><i class="fa fa-trash"></i></a>&nbsp;
                    </td>
                </tr>
                {{/list}}
            </tbody>
        </table>
    </div>
</div>

<!-- Modal -->
<div id="myModal" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title"></h4>
      </div>
      <div class="modal-body">
          <img onerror="this.src = 'https://image.ibb.co/eW2A6k/st4Sp6Aw.jpg';" id = "logo" class="img-logo img-rounded img-responsive"><p id="description"></p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" >Update</button>
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
<script>
     
    
    $("a#del-link").on("click", function (event) {
        event.preventDefault();
        var id =  $(this).data("id");
        bootbox.confirm("This is the default confirm!", 
        function(result){ 
            if (result){
                $.ajax(
                    {
                        url: id,
                        method: "DELETE",
                        success: function (data) {
                            $("#" + id).remove();
                        }
                    }
                );
            }
        });
    });
        
   $("#modal-row-container td:not(#actions)").on('click', function (e) {
        $("#myModal .modal-title").text($(e.target).parent().find("#name").text());
        $("#myModal .modal-body #description").text($(e.target).parent().find("#description").text());
        $("#myModal .modal-body #logo").attr("src",$(e.target).parent().data("logo"));
        $("#myModal").modal();
    });

</script>