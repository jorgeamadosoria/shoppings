<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-black">
            <div class="panel-body">
                <select id="currency">
                    {{#currencies}}
                        <option value="{{this}}">{{this}}</option>
                    {{/currencies}}
                </select>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12 grid-stack">
        <div class="grid-stack-item" data-gs-x="0" data-gs-y="0"
            data-gs-width="4" data-gs-height="4">
            <div class="panel panel-black grid-stack-item-content">
                <div id="categoriesChart"></div>
            </div>
        </div>
        <div class="grid-stack-item"
            data-gs-x="4" data-gs-y="0"
            data-gs-width="4" data-gs-height="4">
            <div class="panel panel-black grid-stack-item-content">
                <div id="reasonsChart" width="100%" height="100%"></div>
            </div>
        </div>
        <div class="grid-stack-item"
            data-gs-x="4" data-gs-y="0"
            data-gs-width="4" data-gs-height="4">
            <div class="panel panel-black grid-stack-item-content">
                Timeline daily expenses for the current month
                Timeline daily expenses for the past month
            </div>
        </div>
        <div class="grid-stack-item"
            data-gs-x="4" data-gs-y="0"
            data-gs-width="4" data-gs-height="4">
            <div class="panel panel-black grid-stack-item-content">
                Timeline daily expenses for the current month per category
            </div>
        </div>
        <div class="grid-stack-item"
            data-gs-x="4" data-gs-y="0"
            data-gs-width="4" data-gs-height="4">
            <div class="panel panel-black grid-stack-item-content">
                Timeline monthly historical expenses 
            </div>
        </div>
        <div class="grid-stack-item"
            data-gs-x="4" data-gs-y="0"
            data-gs-width="4" data-gs-height="4">
            <div class="panel panel-black grid-stack-item-content">
                Timeline monthly historical expenses per category
            </div>
        </div>
        <div class="grid-stack-item"
            data-gs-x="4" data-gs-y="0"
            data-gs-width="4" data-gs-height="4">
            <div class="panel panel-black grid-stack-item-content">
                numeric and percentage list of expenses by category (no graph)
            </div>
        </div>
        <div class="grid-stack-item"
            data-gs-x="4" data-gs-y="0"
            data-gs-width="4" data-gs-height="4">
            <div class="panel panel-black grid-stack-item-content">
                bar graph of the 10 most used addresses
            </div>
        </div>
    </div>
</div>
</div>

<script type="text/javascript">
    $(function () {
        var options = {
            cellHeight: 80,
            verticalMargin: 10,
            margin: 50
        };
        $('.grid-stack').gridstack(options);
    });

    $("#currency").on("change",function(e){
        var cur = $(e.target).val();
        pieChart("categoriesChart","green",cur);
        pieChart("reasonsChart","green",cur);
    })

    pieChart("categoriesChart","green","UYU");
    pieChart("reasonsChart","green","UYU");
</script>