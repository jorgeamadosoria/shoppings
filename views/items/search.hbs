
<div class="row">
    <div class="col-lg-offset-1 col-lg-10 col-sm-offset-1 col-sm-10 col-md-offset-1 col-md-10">
        <center>
            <ul class="pagination pagebar">
                {{#times list.pages}}
                    {{#equal @root.list.page this}} 
                        <li class="page-item active active-dark"><a class="page-link" href="#">{{this}}</a></li>
                    {{else}}
                        <li class="page-item"><a class="page-link" href="#">{{this}}</a></li>
                    {{/equal}}
                {{/times}}
            </ul>
        </center>
    </div>
    <div class="col-lg-1 col-md-1 hidden-xs">
        <button class="count btn btn-dark"><span class="badge">{{json list.total}}</span></span>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        {{> items list=list.docs }}
    </div>
</div>