{{> items }}
<div class="panel panel-black">
    <div class="panel-body">
        {{#in user.role 'user,admin'}}
            {{#monthlyTags}}
                <button data-id="{{_id}}" type="button" class="pay-link btn 
                    {{currentMonth lastDate 'btn-success' 'btn-danger'}}">
                    {{_id}} 
                </button>
            {{/monthlyTags}}
        {{else}}
            {{#monthlyTags}}
                <span data-id="{{_id}}" type="button" class="pay-link btn 
                    {{currentMonth lastDate 'btn-success' 'btn-danger'}}">
                    {{_id}} 
                </span>
            {{/monthlyTags}}
        {{/in}}
    </div>
</div>
