{{> items }}
<div class="panel panel-black">
    <div class="panel-body">
        {{#monthlyTags}}
        {{#in user.role 'user,admin'}}
        <button data-id="{{_id}}" type="button" 
        class="pay-link btn 
        {{currentMonth lastDate 'btn-success' 'btn-danger'}}">
            {{_id}} 
        </button>
        {{else}}
            <span data-id="{{_id}}" type="button" 
        class="pay-link btn 
        {{currentMonth lastDate 'btn-success' 'btn-danger'}}">
            {{_id}} 
        </span>
        {{/in}}
        {{/monthlyTags}}
    </div>
</div>
