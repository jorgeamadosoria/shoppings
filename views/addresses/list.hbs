<div class="panel panel-black">
    <div class="panel-body">
        <a class="add_link" href="/addresses/form"><i class="fa fa-4x fa-plus-circle"></i></a>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Address</th>
                    <th>Region</th>
                    <th>Country</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {{#list}}
                <tr id="item-{{_id}}">
                    <td>{{address}}</td>
                    <td>{{region}}</td>
                    <td>{{country}}</td>
                    <td><a id="del-link" data-id="{{_id}}" href=""><i class="fa fa-trash"></i></a>&nbsp;<a href="form?id={{_id}}"><i class="fa fa-pencil"></i></a>&nbsp;
                        <a href="detail/{{_id}}"><i class="fa fa-eye"></i></a>
                    </td>
                </tr>
                {{/list}}
            </tbody>
        </table>
    </div>
</div>
<script>
    $("a#del-link").on("click", function (event) {
        $.ajax(
            {
                url: $(this).data("id"),
                method: "DELETE",
                success: function (data) {
                    $("#item-" + $(this).data("id")).remove();
                }
            }
        );
    });

</script>